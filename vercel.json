{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_SPOTIFY_CLIENT_ID": "@react_app_spotify_client_id",
    "REACT_APP_SPOTIFY_CLIENT_SECRET": "@react_app_spotify_client_secret",
    "REACT_APP_REDIRECT_URI": "@react_app_redirect_uri",
    "REACT_APP_FRONTEND_URL": "@react_app_frontend_url",
    "REACT_APP_BACKEND_URL": "@react_app_backend_url",
    "REACT_APP_SPOTIFY_API_BASE": "@react_app_spotify_api_base"
  }
}
